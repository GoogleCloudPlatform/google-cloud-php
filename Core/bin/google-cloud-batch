namespace Google\Cloud\Core\Batch;

use Google\Cloud\Core\Daemon\DaemonUtils;

$autoloader = DaemonUtils::locateAutoloader(__DIR__ . '/..');
if (is_null($autoloader)) {
    die('No autoloader found');
}

require_once $autoloader;

function showUsageAndDie()
{
    die("usage: " . __FILE__ . " [daemon|retry] {id}");
}

if (count($argv) < 2) {
    showUsageAndDie();
}

if ($argv[1] === 'daemon') {
    $daemon = new BatchDaemon(__FILE__);
    if (count($argv) == 2) {
        $daemon->run();
    } else {
        $idNum = (int) $argv[2];
        $job = $daemon->job($idNum);
        $job->run();
    }
} elseif ($argv[1] === 'retry') {
    $retry = new Retry();
    $retry->retryAll();
} else {
    showUsageAndDie();
}
